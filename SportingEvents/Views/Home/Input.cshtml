@{
    ViewBag.Title = " User Profile";
}
<h1> Sign Up for Events</h1>
<form asp-controller="Home" asp-action="GetDetails" method="post">
    <table>
        <tr>
            <td>Name:</td>
            <td><input name="Name" type="text" /></td>
        </tr>
        <tr>
            <td>Date of Birth:</td>
            <td><input name="DateOfBirth" type="text" /></td>
        </tr>
        <tr>
            <td>Gender:</td>
            <td><input name="Gender" type="text" /></td>
        </tr>
        <tr>
            <td>E-Mail Address:</td>
            <td><input name="Email" type="text" /></td>
        </tr>
        <tr>
            <td>Home Address:</td>
            <td><input name="Address" type="text" /></td>
        </tr>
        <tr>
            <td>Post Code:</td>
            <td><input name="PostCode" type="text" /></td>
        </tr>
        <tr>
            <td>Home Phone:</td>
            <td><input name="HomeTelephoneNumber" type="text" /></td>
        </tr>
        <tr>
            <td>Mobile Phone:</td>
            <td><input name="MobileTelephoneNumber" type="text" /></td>
        </tr>
        <tr>
            <td>Your Biography:</td>
            <td><input name="Biography" type="text" /></td>
        </tr>
        <tr>
            <td>Your Skills:</td>
            <td><input name="SkillKeyWord" type="text" /></td>
        </tr>
        <tr>
            <td>Your work location:</td>
            <td><input name="WorkLocation" type="text" /></td>
        </tr>
    </table>
<input id="Submit1" type="submit" value="submit" />
</form>

<h2 style="font-style:italic; color:green"> @ViewBag.Result</h2>


